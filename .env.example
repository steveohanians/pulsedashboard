# Database
DATABASE_URL=postgresql://username:password@localhost:5432/dbname

# Authentication
SESSION_SECRET=your-session-secret-here

# OpenAI Integration
OPENAI_API_KEY=your-openai-api-key

# Sample Data Configuration
# Set to "false" to disable sample data generation entirely
SAMPLE_DATA_ENABLED=true

# Set to "true" to auto-generate sample data for new companies
AUTO_GENERATE_SAMPLE_DATA=true

# Force sample data in production (not recommended)
# FORCE_SAMPLE_DATA=true

# Server Configuration
PORT=5000
NODE_ENV=development

# Email Service (for password reset - configure as needed)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=your-email@example.com
# SMTP_PASS=your-email-password