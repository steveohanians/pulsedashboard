# LoadKit v1 Feature Flags
# Copy to .env.local for development testing
# ALL FLAGS DISABLED BY DEFAULT FOR SAFETY

# Master switch - enables LoadKit system
REACT_APP_LOADKIT_ENABLED=false

# Component-specific flags
REACT_APP_LOADKIT_DASHBOARD=false
REACT_APP_LOADKIT_BRAND_SIGNALS=false

# Feature-specific flags  
REACT_APP_LOADKIT_FUN_COPY=false
REACT_APP_LOADKIT_NEW_TIMING=false
REACT_APP_LOADKIT_VISUAL_ONLY=false

# Development/Testing Phases:
# Phase 1: Enable master switch only (visual parity test)
# REACT_APP_LOADKIT_ENABLED=true

# Phase 2: Enable single component for testing
# REACT_APP_LOADKIT_ENABLED=true
# REACT_APP_LOADKIT_DASHBOARD=true

# Phase 3: Enable fun copy on approved surfaces
# REACT_APP_LOADKIT_ENABLED=true
# REACT_APP_LOADKIT_DASHBOARD=true
# REACT_APP_LOADKIT_FUN_COPY=true

# Phase 4: Full rollout
# REACT_APP_LOADKIT_ENABLED=true
# REACT_APP_LOADKIT_DASHBOARD=true
# REACT_APP_LOADKIT_BRAND_SIGNALS=true
# REACT_APP_LOADKIT_FUN_COPY=true